<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="Main_Landscape"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView2"
        android:layout_gravity="right"
        android:maxLength="30"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11"
            android:id="@+id/b11"
            android:layout_alignParentStart="true"
            android:onClick="onClickB11"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:id="@+id/b12"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/b8"
            android:onClick="onClickB12"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13"
            android:id="@+id/b13"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/b12"
            android:onClick="onClickB13"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:id="@+id/b15"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/b10"
            android:onClick="onClickB15"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14"
            android:id="@+id/b14"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/b13"
            android:onClick="onClickB14"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/b7"
            android:layout_below="@+id/b8"
            android:layout_toStartOf="@+id/b13"
            android:onClick="onClickB7"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/b6"
            android:layout_alignTop="@+id/b7"
            android:layout_toStartOf="@+id/b7"
            android:onClick="onClickB6"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/b8"
            android:layout_below="@+id/b13"
            android:layout_toStartOf="@+id/b14"
            android:onClick="onClickB8"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/b9"
            android:layout_below="@+id/b13"
            android:layout_toEndOf="@+id/b13"
            android:onClick="onClickB9"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:id="@+id/b10"
            android:layout_below="@+id/b15"
            android:layout_toEndOf="@+id/b9"
            android:onClick="onClickB10"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/b1"
            android:layout_below="@+id/b7"
            android:layout_alignParentStart="true"
            android:onClick="onClickB1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/b3"
            android:layout_alignTop="@+id/b2"
            android:layout_alignStart="@+id/b8"
            android:onClick="onClickB3"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/b2"
            android:layout_alignTop="@+id/b1"
            android:layout_toEndOf="@+id/b1"
            android:onClick="onClickB2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/b4"
            android:layout_alignTop="@+id/b3"
            android:layout_alignStart="@+id/b9"
            android:onClick="onClickB4"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/b5"
            android:layout_alignTop="@+id/b4"
            android:layout_alignStart="@+id/divX"
            android:onClick="onClickB5"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/b0"
            android:layout_below="@+id/b1"
            android:layout_toStartOf="@+id/b7"
            android:onClick="onClickB0"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:id="@+id/result"
            android:layout_below="@+id/b3"
            android:layout_alignStart="@+id/b2"
            android:onClick="onClickResult"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:id="@+id/clear"
            android:layout_below="@+id/b5"
            android:layout_toEndOf="@+id/result"
            android:onClick="onClickClear"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CE"
            android:id="@+id/cleareverything"
            android:layout_below="@+id/b5"
            android:layout_toEndOf="@+id/clear" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/X"
            android:id="@+id/divX"
            android:layout_below="@+id/b5"
            android:layout_toEndOf="@+id/b4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:id="@+id/multiply"
            android:layout_alignBaseline="@+id/b5"
            android:layout_alignBottom="@+id/b5"
            android:layout_toEndOf="@+id/b15"
            android:onClick="onClickMultiply"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/substract"
            android:layout_below="@+id/b15"
            android:layout_toEndOf="@+id/b15"
            android:onClick="onClickSubstract"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/add"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/b15"
            android:onClick="onClickAdd"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xÂ²"
            android:id="@+id/xquad"
            android:layout_below="@+id/b5"
            android:layout_toEndOf="@+id/b5"
            android:onClick="onClickQuadX"/>

    </RelativeLayout>

</LinearLayout>
